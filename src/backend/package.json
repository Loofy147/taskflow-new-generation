{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/backend/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:unit": "jest",
    "test:integration": "jest --config tests/jest.integration.config.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "db:migrate": "drizzle-kit migrate:pg",
    "db:seed": "ts-node src/backend/database/seed.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@trpc/server": "^10.45.2",
    "drizzle-orm": "^0.29.4",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/pg": "^8.11.0",
    "@types/ws": "^8.5.10",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
